<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroudcolor"
    android:layout_height="match_parent">
     <LinearLayout
         android:id="@+id/recording_setting"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:background="@color/white"
         android:layout_marginTop="1dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_height="60dp">
          <ImageView
              android:layout_width="30dp"
              android:src="@mipmap/setting_record"
              android:layout_height="30dp" />
          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:layout_marginLeft="10dp"
              android:text="@string/video_setting"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="30dp"
              android:padding="5dp"
              android:src="@mipmap/ic_right_arrow"
              android:layout_height="30dp" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/tack_photo"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:background="@color/white"
         android:layout_marginTop="1dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_height="60dp">
          <ImageView
              android:layout_width="30dp"
              android:src="@mipmap/setting_video"
              android:layout_height="30dp" />
          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:layout_marginLeft="10dp"
              android:text="@string/photo_setting"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="30dp"
              android:padding="5dp"
              android:src="@mipmap/ic_right_arrow"
              android:layout_height="30dp" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/device"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:gravity="center_vertical"
         android:background="@color/white"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginTop="1dp"
         android:layout_height="60dp">
          <ImageView
              android:layout_width="30dp"
              android:src="@mipmap/setting_device"
              android:layout_height="30dp" />
          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="18sp"
              android:layout_marginLeft="10dp"
              android:text="@string/device_setting"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_width="30dp"
              android:padding="5dp"
              android:src="@mipmap/ic_right_arrow"
              android:layout_height="30dp" />
     </LinearLayout>

</LinearLayout>